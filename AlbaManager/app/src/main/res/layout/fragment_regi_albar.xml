<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alba_manager.albamanager.Fragment.RegiAlbarFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regiAlbaRelativeLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regiAlbaImageViewPlus"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:background="@color/color_blank"
            android:padding="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="35dp"
            android:maxWidth="35dp"
            android:src="@drawable/icon_plus"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regialba_text_view_insert_albla"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/color_baseBlue"
            android:textSize="16sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/regiAlbaButtonInsertAlba"/>

    </LinearLayout>


    <ListView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regiAlbaListView"
        android:clickable="true">
    </ListView>


</LinearLayout>
